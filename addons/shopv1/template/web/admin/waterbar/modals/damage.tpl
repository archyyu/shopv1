                                    <select class="form-control selectpicker">
                                    </select>
                                </div>
                            </div>
                            <div class="form-group form-group-sm">
                                <label class="col-sm-3 control-label">数量：</label>
                                <div class="col-sm-8">
                                    <input class="form-control">
